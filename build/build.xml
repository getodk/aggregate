<project name="SetupJenkinsMaven" default="dist" basedir=".">
    <description>
        simple Ant script to run maven install commands for 
		libraries that are not present in any external repository.
    </description>
	
	<target name="init-os">
		<condition property="os.windows">
			<os family="windows"/>
		</condition>
		<condition property="os.unix">
			<os family="unix"/>
		</condition>
	</target>
	
	<target name="dist">
		<get src="http://selenium-release.storage.googleapis.com/2.45/selenium-java-2.45.0.zip" 
			dest="selenium-java-2.45.0.zip"
			skipexisting="true"/>
		<unzip src="selenium-java-2.45.0.zip" dest="selenium-java-2.45.0" overwrite="false"/>
		
		<get src="https://storage.googleapis.com/appengine-sdks/featured/appengine-java-sdk-1.9.18.zip" 
			dest="appengine-java-sdk-1.9.18.zip"
			skipexisting="true"/>
		<unzip src="appengine-java-sdk-1.9.18.zip" dest="appengine-java-sdk-1.9.18" overwrite="false"/>
	</target>
  	
</project>