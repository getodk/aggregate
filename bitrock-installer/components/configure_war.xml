            <ruleList>
                <compareText>
                    <logic>equals</logic>
                    <text>${platform}</text>
                    <value>mysql</value>
                </compareText>
            </ruleList>
        </writeFile>
        <writeFile>
            <encoding>utf-8</encoding>
            <path>${installdir}/README.html</path>
            <progressText>Write README</progressText>
            <text>${html_steps_begin}
