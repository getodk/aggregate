		preElement.scrollTop = sh;
	} else {
		preElement.scrollTop = preElement.offsetHeight;
	}
	if ( window.terminalOutcome == 0 ) {
		setTimeout(continueWaitingForCompletion,10);
	} else {
		clearScriptingFiles();
